/*
name: get_products_details

description: >
    For general support agents - retrieve details of a particular product or a set of products

input: >
    {
      "type": "object",
      "properties": {
        "skus": { 
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }

annotations:
  finance: "true"

  
secrets:
    - couchbase:
        conn_string: CB_CONN_STRING
        username: CB_USERNAME
        password: CB_PASSWORD
*/

SELECT *
FROM 
 `main`.`data`.`products`
WHERE 
 `sku` IN $skus 