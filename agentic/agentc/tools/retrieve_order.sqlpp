/*
name: retrive_order

description: >
    For general support agents to identify information relevant for further processing - retrieve order information 

input: >
    {
      "type": "object",
      "properties": {
        "order_id": { "type": "string" }
      }
    }

secrets:
    - couchbase:
        conn_string: CB_CONN_STRING
        username: CB_USERNAME
        password: CB_PASSWORD
*/
SELECT *
FROM 
 `main`.`data`.`orders`
WHERE 
 meta().id = $order_id