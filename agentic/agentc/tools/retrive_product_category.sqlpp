/*
name: retrive_product_category

description: >
    For general support agents to identify information relevant for further processing - retrieve information of products under a particular category 

input: >
    {
      "type": "object",
      "properties": {
        "product_category": { 
          "type": "string",
          "enum": ["vacuum", "wash_machine"]
        }
      }
    }

secrets:
    - couchbase:
        conn_string: CB_CONN_STRING
        username: CB_USERNAME
        password: CB_PASSWORD
*/
SELECT *
FROM 
 `main`.`data`.`products`
WHERE 
 category = $product_category
Limit 5